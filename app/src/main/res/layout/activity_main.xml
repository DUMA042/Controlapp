<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Solar Irrediance : "
        android:layout_centerInParent="true"
        android:gravity="center"
        android:id="@+id/solar"
        />

    <TextView
        android:id="@+id/solar_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="13dp"
        android:layout_toRightOf="@+id/solar"
        android:paddingRight="5dp"
        android:text="Hello World! " />

    <TextView
        android:id="@+id/temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/solar"
        android:layout_marginTop="28dp"
        android:layout_centerInParent="true"
        android:text="Temperature : " />

    <TextView
        android:id="@+id/temp1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/solar_id"
        android:layout_centerInParent="true"
        android:layout_marginLeft="31dp"
        android:layout_marginTop="27dp"
        android:layout_toRightOf="@+id/temp"
        android:text="Temp" />

    <TextView
        android:id="@+id/Hum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_below="@+id/temp"
        android:layout_marginTop="27dp"
        android:text="Humdity : " />

    <TextView
        android:id="@+id/Hum1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/temp1"
        android:layout_centerInParent="true"
        android:layout_marginLeft="31dp"
        android:layout_marginTop="27dp"
        android:layout_toRightOf="@+id/Hum"
        android:text="30 " />

    <Button
        android:id="@+id/button6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="SET DEVICES" />


</RelativeLayout>